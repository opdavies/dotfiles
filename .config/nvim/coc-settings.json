{
  "diagnostic.messageTarget": "echo",
  "diagnostic.virtualText": true,

  "intelephense.files.associations": [
    "*.inc",
    "*.module",
    "*.php",
    "*.profile",
    "*.test",
    "*.theme"
  ],
  "intelephense.progress.enable": false,
  "intelephense.telemetry.enabled": false,

  "markdownlint.config": {
    "default": true,
    "line_length": false
  }
}
